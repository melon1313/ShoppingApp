<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="@drawable/dialog_circle"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:padding="15dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_key"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請輸入註冊信箱"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/forget_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/green"
            android:layout_marginTop="20dp"
            app:errorTextAppearance="@style/error_text_color">
            <EditText
                android:id="@+id/forgetpassword_edittext"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColor="@color/green"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/forgetpassword_check_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="送出"
                android:background="@drawable/button_round01"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/forgetpassword_cancel_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="取消"
                android:background="@drawable/button_round01"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>