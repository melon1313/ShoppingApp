<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="search_style" parent="AppTheme">
        <item name="colorAccent">@color/baby_green</item>
        <item name="editTextColor">@color/green</item>
    </style>

    <style name="account_tabs_theme" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="login_text_style" parent="AppTheme">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="error_text_color" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tab_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="item_product_text_style">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/duck_yellow</item>
    </style>
</resources>
